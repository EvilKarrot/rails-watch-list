<div class="container">
  <div class="mt-4 d-flex justify-content-between">
    <h3>Movie lists:</h3>
    <%= link_to "Create a List", new_list_path, class: "btn btn-primary mb-4" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm" style="background-image:
          <% if list.photo.attached? %>
            linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill, gravity: :auto %>');
            background-size: cover;
          <% else %>
            none;
          <% end %>">
          <div class="card-body d-flex justify-content-center align-items-center" style="height: 200px;">
            <h5 class="card-title text-center">
              <%= link_to list.name, list_path(list),
                    class: "text-decoration-none",
                    data: { text: "#{list.name}" } %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
