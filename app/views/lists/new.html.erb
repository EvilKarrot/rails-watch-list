<div class="d-flex flex-column gap-4 w-25 mx-auto my-5">
  <%= simple_form_for @list do |f| %>
    <%= f.input :name, label: "Enter the name of the list" %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end %>

  <p><%= link_to "Cancel", lists_path, class: "btn btn-secondary" %></p>
</div>
